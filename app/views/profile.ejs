<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Homepage</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/heroic-features.css" rel="stylesheet">

    <script>
        #picture {
          float:right;
        }
    </script>

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <!-- <a class="navbar-brand" href="#">Start Bootstrap</a> -->
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                        <li>
                          <a href = "http://localhost:1337/logout"> Log Out</a> <br>
                        </li>
                        <li>
                          <a href = "http://localhost:1337/"> Go To Home </a>
                       </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">


      <% if(titles){ %>
        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <!-- <h1>Welcome to the GUC portfolio homepage!</h1> -->
            <!-- <p>Here you'll be able to view students' work, and if you're a student yourself, create your own portfoli which others can view.</p> -->
            <!-- <p><a class="btn btn-primary btn-large">Call to action!</a> -->
            <!-- </p> -->

              <div style = "width:400px;word-wrap: break-word ">
                <p style="float:left;">
                  Name:<%=user.name%><br>
                  ID:<%=user.uni_id%><br>
                  Description:
                  <% if(user.description){ %>

                       <%=user.description%>

                       <% } else{ %>
                        <br>
                       <a href="/description" class="btn btn-primary" style="float:right;" >Add Portfolio Descripton</a>

                    <% } %>

                </p>
              </div>


            <div class = "container">
            <% if(pic){ %>
                 <img src = <%=pic%> style="float:right;width: 300px; height:400px"/><br>
                 <% } else{ %>
                <img src = "default.jpg" style="float:right;"/><br>
              <% } %>

            </div>
            <br><a href="/profilepic" class="btn btn-primary" style="float:right;" >Update Profile Picture</a>

        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3><%=user.name%>'s Portfolio:</h3>
            </div>
        </div>
        <!-- /.row -->

        <% } %>

        <!-- Page Features -->
        <div class="row text-center">



          <% if(!titles){ %>

               <h3 style="padding = 200px"> You do not have a portfolio. Add works to create one. </h3>
               <% } else{ %>

                 <% for(var i = 0; i<titles.length; i++) { %>



                   <div class="col-md-3 col-sm-3 hero-feature" style = "width:272.5px;height:200px;" >
                       <div class="thumbnail" style = "width:262.5px;height:200px">

                       <% if(photos[i]){ %>
                            <img src = <%=photos[i]%> style = "width:250px; height:100px"/>
                            <% } else{ %>
                              <div  style = "word-wrap: break-word; width:250px; height:100px;" >
                                <h3>URL: <%= urls[i] %> </h3>
                              </div>
                         <% } %>

                         <div class="caption">
                             <p>Title: <%=titles[i]%></p>
                         </div>
                     </div>
                 </div>

              <% }; %>


            <% } %>


       </div>

  <div class="row text-center">

         <center>
          <a href = "/addWork"> <img src="add.png" alt="" style = "width: 50px; height:50px"></a>
        </center>


        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
</div>
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
